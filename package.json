{

  "name": "zenoh",
  "type": "module",
  "dependencies": {
    "text-encoding": "^0.7.0",
    "cpx": "^1.5.0"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack-cli": "^5.1.4",
    "exports-loader": "^4.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "build:wasm": "bash zenoh-wasm/build.sh",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc",
    "build:ts": "npm run build:esm",
    "build": "npm run build:wasm && npm run build:ts && npm run build:copy_zenh_js",

    "build:copy_wasm": "cpx -v \"src/**/*.wasm\" \"dist/\"",
    "build:copy_zenh_js": "cpx -v \"src/wasm/**/*.{wasm,js}\" \"dist/cjs/wasm\"",

    "webpack": "webpack",
    "example": "cd examples && npm run start"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist"
  ]
}