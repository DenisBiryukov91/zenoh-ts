{
  "name": "zenoh",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "text-encoding": "^0.7.0",
    "cpx": "^1.5.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "20.9.1",
    "ts-node": "10.9.1",
    "cpx": "^1.5.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack-cli": "^5.1.4",
    "exports-loader": "^4.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "build:wasm": "bash zenoh-wasm/build.sh",
    "build:cjs": "npx tsc --module commonjs --outDir dist/cjs",
    "build:esm": "npx tsc",
    "build:ts": "npm run build:esm",
    "build": "npm run build:wasm && npm run build:ts && npm run build:copy_zenoh_js",
    "build_js_copy": "npm run build:ts && npm run build:copy_zenoh_js",
    "build:copy_wasm": "cpx -v \"src/**/*.wasm\" \"dist/\"",
    "build:copy_zenoh_js": "cpx -v \"src/wasm/**/*.{wasm,js,mjs}\" \"dist/wasm\"",
    "webpack": "webpack",
    "example": "cd examples && npm run start",
    "clean_build_run": "npm run clean && npm install && npm run build_js_copy"
  }
}