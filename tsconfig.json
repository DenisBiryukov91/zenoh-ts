{
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "NodeNext",
		"target": "es2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node16",
		"allowJs": true,
		//
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"noImplicitAny": false,
		"declaration": true,
	},
	"include": [
		"src/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
